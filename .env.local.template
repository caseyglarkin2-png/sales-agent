# CaseyOS Local Environment Configuration
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control!

# =============================================================================
# Database (uses Docker Compose postgres service)
# =============================================================================
# DATABASE_URL is set by docker-compose.yml - no need to override locally
# For external DB: DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname

# =============================================================================
# Redis (uses Docker Compose redis service)
# =============================================================================
# REDIS_URL is set by docker-compose.yml - no need to override locally
# For external Redis: REDIS_URL=redis://host:6379/0

# =============================================================================
# OpenAI API (REQUIRED for Jarvis, voice, and LLM features)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# Google OAuth (REQUIRED for Gmail, Calendar, Drive)
# =============================================================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# =============================================================================
# HubSpot (REQUIRED for CRM integration)
# =============================================================================
HUBSPOT_API_KEY=your-hubspot-private-app-key
HUBSPOT_PORTAL_ID=your-portal-id
HUBSPOT_WEBHOOK_SECRET=your-webhook-hmac-secret

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=generate-a-32-char-random-string-here
ADMIN_PASSWORD=your-strong-admin-password

# =============================================================================
# Feature Flags
# =============================================================================
MODE_DRAFT_ONLY=true
ALLOW_REAL_SENDS=false
REQUIRE_APPROVAL=true
AUTO_APPROVE_ENABLED=false

# =============================================================================
# Monitoring (Optional)
# =============================================================================
# SENTRY_DSN=https://xxx@sentry.io/xxx
SENTRY_ENVIRONMENT=development

# =============================================================================
# Voice Settings (Sprint 17)
# =============================================================================
TTS_ENABLED=true
TTS_VOICE_NAME=nova
TTS_RATE=1.0

# =============================================================================
# Local Development
# =============================================================================
API_ENV=development
LOG_LEVEL=DEBUG

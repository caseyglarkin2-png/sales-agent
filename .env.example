# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=INFO
API_ENV=development

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/sales_agent
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Google OAuth
GOOGLE_CLIENT_ID=your-client-id-here
GOOGLE_CLIENT_SECRET=your-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key-here
HUBSPOT_APP_ID=your-hubspot-app-id-here

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Feature Flags
FEATURE_COLD_START_DEMO=true
FEATURE_VALIDATION_AGENT=false
FEATURE_OUTCOME_REPORTER=false

# Operator Mode
OPERATOR_MODE_ENABLED=true
OPERATOR_APPROVAL_REQUIRED=true
MAX_EMAILS_PER_DAY=20
MAX_EMAILS_PER_WEEK=2

# Logging
LOG_FORMAT=json
LOG_LEVEL=INFO
